{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,

    "baseUrl": "./src/**/*",
    "outDir": ".",
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "jsx": "react"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
